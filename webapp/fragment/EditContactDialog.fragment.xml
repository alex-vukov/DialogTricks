<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Edit Contact Details">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout">
				<f:content>
					<Label text="Name"/>
					<Input value="{dialogModel>/Name}"/>
					<Label text="Address"/>
					<Input value="{dialogModel>/Address}"/>
					<Label text="City"/>
					<Input value="{dialogModel>/City}"/>
					<Label text="ZIP Code"/>
					<Input value="{dialogModel>/ZIP}"/>
					<Label text="Country"/>
					<Input value="{dialogModel>/Country}"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<buttons>
			<Button text="Save" type="Emphasized" press="onDialogSave"/>
			<Button text="Cancel" press="onDialogCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>